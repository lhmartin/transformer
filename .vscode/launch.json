    "version": "0.2.0",
    "configurations": [
        {
            "name": "Resume Base Transformer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_script.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--config", "./configs/base_transformer.yaml"],
            "env" : {
                "PYTHONPATH" : "${workspaceFolder}"
            }
        },
        {
            "name": "Base Transformer - 2 GPU- WMT14",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_script.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--config", "./configs/base_transformer_wmt14.yaml"],
            "env" : {
                "PYTHONPATH" : "${workspaceFolder}"
            }
        },
        {
            "name": "Base Transformer - CE- ILSWT",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_script.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--config", "./configs/base_transformer_ilswt_cross_entropy.yaml"],
            "env" : {
                "PYTHONPATH" : "${workspaceFolder}"
            }
